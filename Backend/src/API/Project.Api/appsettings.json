{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Database": "Host=localhost;Port=5432;Database=project_db;Username=postgres;Password=postgres",
    "Redis": "localhost:6379"
  },
  "Authentication": {
    "Authority": "http://localhost:5000/",
    "Audience": "Project.Api",
    "Key": "super-secret-jwt-signing-key-must-be-at-least-32-characters-long",
    "ExpiresInMinutes": 60,
    "RequireHttpsMetadata": false,
    "TokenValidationParameters": {
      "ValidateIssuer": true,
      "ValidateAudience": true,
      "ValidateLifetime": true,
      "ValidateIssuerSigningKey": true
    }
  },
  "Email": {
    "From": "test@example.com",
    "Host": "localhost",
    "Port": 25
  },
  "Notifications": {
    "Inbox": {
      "IntervalInSeconds": 15,
      "BatchSize": 20
    }
  },
  "Users": {
    "Outbox": {
      "IntervalInSeconds": 15,
      "BatchSize": 20
    },
    "Inbox": {
      "IntervalInSeconds": 15,
      "BatchSize": 20
    }
  },
  "RabbitMQ": {
    "Host": "localhost",
    "VirtualHost": "/",
    "Username": "admin",
    "Password": "admin"
  },
  "OpenTelemetry": {
    "ServiceName": "Project.Api",
    "Version": "0.0.1"
  }
}